<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bhs.sssss.mappers.CartMapper">

    <select id="selectCartByIndex"
            resultType="com.bhs.sssss.entities.CartEntity">
        SELECT `index` AS `index`,
               `item_id`    AS `itemId`,
               `item_name`  AS `itemName`,
               `item_price` AS `itemPrice`,
               `quantity`   AS `quantity`
        FROM `kurly`.`carts`
        WHERE `index` = #{index}
        LIMIT 1
    </select>

    <select id="selectCartByPrice"
            resultType="com.bhs.sssss.entities.CartEntity">
        SELECT `index` AS `index`,
               `item_id`    AS `itemId`,
               `item_name`  AS `itemName`,
               `item_price` AS `itemPrice`,
               `quantity`   AS `quantity`
        FROM `kurly`.`carts`
        WHERE `item_id` = #{itemId}
        LIMIT 1
    </select>
    <select id="selectAllCarts"
            resultType="com.bhs.sssss.entities.CartEntity">
        SELECT `index` AS `index`,
               `item_id`    AS `itemId`,
               `item_name`  AS `itemName`,
               `item_price` AS `itemPrice`,
               `quantity`   AS `quantity`,
               `is_checked` AS `isChecked`,
               `is_deleted` AS `isDeleted`,
               `status`     AS `status`,
               `item_image` AS `itemImage`
        FROM `kurly`.`carts`
        WHERE `is_deleted` IS FALSE

    </select>

    <select id="selectCartsByMemberId"
            resultType="com.bhs.sssss.entities.CartEntity">
        SELECT `index` AS `index`,
               `item_id`    AS `itemId`,
               `item_name`  AS `itemName`,
               `item_price` AS `itemPrice`,
               `quantity`   AS `quantity`,
               `is_checked` AS `isChecked`,
               `is_deleted` AS `isDeleted`,
               `status`     AS `status`,
               `item_image` AS `itemImage`
        FROM `kurly`.`carts`
        WHERE `member_id` = #{memberId} AND `is_deleted` IS FALSE

    </select>

    <update id="updateCart" parameterType="_int">
        UPDATE `kurly`.`carts`
        SET `quantity` = #{quantity}
        WHERE `index` = #{index}

        LIMIT 1
    </update>
    <update id="updateCheckStatus" parameterType="map">
        UPDATE `kurly`.`carts`
        SET is_checked = #{isChecked}
        WHERE `index` = #{index}
    </update>
    <update id="deleteCartItem" parameterType="int">
        UPDATE `kurly`.`carts`
        SET `is_deleted` = 1
        WHERE `index` = #{index}
        LIMIT 1
    </update>
    <update id="updateDeletedStatusForItems" parameterType="list">
        UPDATE `kurly`.`carts`
        SET `is_deleted` = 1
        WHERE `index` IN
        <foreach item="index" collection="indices" open="(" separator="," close=")">
            #{index}
        </foreach>
        AND `is_checked` = 1
    </update>

    <select id="countActiveItems" resultType="_int">
        SELECT COUNT(*)
        FROM `kurly`.`carts`
        WHERE `is_deleted` = 0
    </select>
    <select id="countCheckedItems" resultType="_int">
        SELECT COUNT(*)
        FROM `kurly`.`carts`
        WHERE `is_deleted` = 0 AND `is_checked` = 1
    </select>

</mapper>